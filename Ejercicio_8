//Una función generadora de índices pares automáticos

function* indices_pares() {
    let id = 0;
    while(true) {
        id = id+2
        if (id === 30) {
            return id
        }
        yield id
    }
}

const gen = indices_pares();

console.log(gen.next().value)
console.log(gen.next().value)
console.log(gen.next().value)
